ipeGCCards.loadScripts = function() {
    var src = document.location.protocol + "//ips-invite.iperceptions.com/Invitations/InvitationsJS/126/s126452/iPGCC_layer.js";
    // var style = document.location.protocol + "//ips-invite.iperceptions.com/Invitations/InvitationsJS/126/s126452/iPGCC_stylesheet.css";
    // var src = './iPGCC_layer.js';
    callback = function () { };
    "use strict";

    var style = document.createElement("link");
    style.type = "text/css";
    style.rel = "stylesheet";
    style.href = "https://ips-invite.iperceptions.com/Invitations/InvitationsJS/126/s126452/iPGCC_stylesheet.css";

    var script = document.createElement("script");
    script.type = "text/javascript";
    script.src = src;

    if (typeof (script.onreadystatechange) == "undefined")
        script.onload = function () { this.onload = null; callback(); };
    else
        script.onreadystatechange = function () { if (this.readyState != "loaded" && this.readyState != "complete") return; this.onreadystatechange = null; callback(); };

    document.getElementsByTagName("head")[0].appendChild(style);
    document.getElementsByTagName("head")[0].appendChild(script);
};

ipeGCCards.IPEOmniKey = (function () {
    function S4() {
        return (((1 + Math.random()) * 0x10000) | 0).toString(16).substring(1);
    }

    return (S4() + S4() + "-" + S4() + "-" + S4() + "-" + S4() + "-" + S4() + S4() + S4()).toUpperCase();
})();

